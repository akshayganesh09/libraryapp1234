<script type="text/javascript">

          function validation(){

              var user = document.getElementById('user').value;
              var email = document.getElementById('email').value;
              var pass = document.getElementById('pass').value;
              var conpass = document.getElementById('conpass').value;
              var number = document.getElementById('number').value;


// user

              if (user ==""){

                  document.getElementById('username').innerHTML = " **please fill the user name";
                  return false;
              }
              else{
                  document.getElementById('username').innerHTML = "";
              }
              if((user.length <=2)||(user.length >20)){

                  document.getElementById('username').innerHTML = " ** user name must be between 2 to 20 characters";
                  return false;
              }
              else{
                  document.getElementById('username').innerHTML = "";
              }    
              if(!isNaN(user)){
                  document.getElementById('username').innerHTML = " ** user name must not be integers";
                  return false;
              }
              else{
                  document.getElementById('username').innerHTML = "";
              }    



// email
              if (email ==""){

                  document.getElementById('gmail').innerHTML = " **please fill the email Id";
                  return false;
              }
              else{
                  document.getElementById('gmail').innerHTML = "";
              }    
              if(email.indexOf('@') <=0){

                  document.getElementById('gmail').innerHTML = " **invalid email Id";
                  return false;
              }
              else{
                  document.getElementById('gmail').innerHTML = "";
              }    
              if((email.charAt(email.length-4)!='.') && (email.charAt(email.length-3)!='.')){

                  document.getElementById('gmail').innerHTML = " **invalid email Id";
                  return false;
              }
              else{
                  document.getElementById('gmail').innerHTML = "";
              }    

// password
              if (pass ==""){

                  document.getElementById('pasword').innerHTML = " **please set a password";
                  return false;
              }
              else{
                  document.getElementById('pasword').innerHTML = "";
              }    
              if(pass.length<=6){

                  document.getElementById('pasword').innerHTML = " ** password is too short ";
                  return false;
              } 
              else{
                  document.getElementById('pasword').innerHTML = "";
              }    
              if(pass.search(/[0-9]/)==-1){

                  document.getElementById('pasword').innerHTML = " ** password must contain atleat 1 number";
                  return false;
              }
              else{
                  document.getElementById('pasword').innerHTML = "";
              }    
              if(pass.search(/[A-Z]/)==-1){

                  document.getElementById('pasword').innerHTML = " ** password must contain atleat 1 uppercase character";
                  return false;
              }
              else{
                  document.getElementById('pasword').innerHTML = "";
              }    
              if(pass.search(/[a-z]/)==-1){

                  document.getElementById('pasword').innerHTML = " ** password must contain atleat 1 Lowercase character";
                  return false;
              }
              else{
                  document.getElementById('pasword').innerHTML = "";
              }    
              if(pass.search(/[!/@/#/$/%/^/&/*/_/+/./?/]/)==-1){

                  document.getElementById('pasword').innerHTML = " ** password must contain atleat 1 special character";
                  return false;
              } 
              else{
                  document.getElementById('pasword').innerHTML = "";
              }      

// confirmation password

              if (conpass ==""){

                  document.getElementById('confpass').innerHTML = " **please confirm the password";
                  return false;
              }
              else{
                  document.getElementById('confpass').innerHTML = "";
              }    
              if(pass!=conpass){
                  document.getElementById('confpass').innerHTML = " ** password not match ";
                  return false;
              }
              else{
                  document.getElementById('confpass').innerHTML = "";
              }    

//phone number 

              if (number ==""){

                  document.getElementById('mnumber').innerHTML = " **please fill the phone number";
                  return false;
              }
              else{
                  document.getElementById('mnumber').innerHTML = "";
              }    
              if(isNaN(number)){

                  document.getElementById('mnumber').innerHTML = " **only numbers are allowed";
                  return false;
              }
              else{
                  document.getElementById('mnumber').innerHTML = "";
              }     
              if(number.length !=10){

                  document.getElementById('mnumber').innerHTML = " **user must enter 10digits";
                  return false;
              }
              else{
                  document.getElementById('mnumber').innerHTML = "";
                  return true;
              }
          }

  
</script>





